# NFL API Key from SportsData.io (Required)
NFL_API_KEY=your_api_key_here

# YouTube Data API Key (Optional - for video search)
# Get it from: https://console.developers.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# News API Key (Optional - for news sentiment analysis)
# Get it from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# PostgreSQL Database Connection (Required)
# Example: postgresql://username:password@host:port/database
DATABASE_URL=your_postgresql_connection_string_here

# Authentication (Required for web dashboard)
# Generate password hash using: node generate-password-hash.js YourPassword123
AUTH_USERNAME=admin
AUTH_PASSWORD_HASH=admin123

# JWT Secret (Optional - will use default if not set)
# Generate a random string for production use
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
